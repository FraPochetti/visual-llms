generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/var/visualneurons/db.sqlite"
}

model Session {
  id              String       @id @default(uuid())
  createdAt       DateTime     @default(now())
  lastSeen        DateTime     @updatedAt
  cognitoUsername String?      @unique
  actions         Action[]
  mediaAssets     MediaAsset[]

  @@map("sessions")
}

model MediaAsset {
  id        String   @id @default(uuid())
  owner     String
  kind      String   @default("image")
  provider  String   @default("local-fs")
  path      String
  bytes     Int?
  width     Int?
  height    Int?
  metadata  String?
  saved     Boolean  @default(false)
  createdAt DateTime @default(now())
  actions   Action[]
  session   Session  @relation(fields: [owner], references: [id])

  @@map("media_assets")
}

model Action {
  id        String      @id @default(uuid())
  userId    String
  action    String
  assetId   String?
  detail    String?
  createdAt DateTime    @default(now())
  asset     MediaAsset? @relation(fields: [assetId], references: [id])
  session   Session     @relation(fields: [userId], references: [id])

  @@map("actions")
}

model Prediction {
  id           String   @id @default(uuid())
  predictionId String   @unique
  owner        String
  type         String
  status       String
  prompt       String
  metadata     String?
  assetId      String?
  error        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("predictions")
}
